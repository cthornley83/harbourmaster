{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["harbour_id", "question", "answer", "category", "tags", "tier"],
  "properties": {
    "harbour_id": { 
      "type": "string",
      "description": "UUID from harbours table"
    },
    "question": { 
      "type": "string", 
      "minLength": 5,
      "maxLength": 500
    },
    "answer": { 
      "type": "string", 
      "minLength": 10,
      "maxLength": 5000
    },
    "category": { 
      "type": "string",
      "enum": ["Mooring", "Navigation", "Amenities", "Services", "Weather", "Costs", "Safety", "General"]
    },
    "tags": { 
      "type": "array", 
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 2
      }
    },
    "tier": {
      "type": "string", 
      "enum": ["free", "pro", "exclusive"]
    },
    "notes": { 
      "type": ["string", "null"],
      "maxLength": 1000
    },
    "source": { 
      "type": "string" 
    },
    "metadata": { 
      "type": "object" 
    }
  }
}
