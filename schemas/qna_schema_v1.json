{
  
  "$id": "https://harbourmaster.ai/schemas/qna_schema_v1.1.json",
  "title": "Harbourmaster Q&A Schema",
  "description": "Schema for validated Q&A entries with domain-prefixed tags and 9-category structure",
  "version": "1.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["harbour", "question", "answer", "category", "tags", "tier"],
  "properties": {
    "harbour": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "Harbour name (e.g., 'Kioni', 'Vathi', 'Frikes')"
    },
    "question": {
      "type": "string",
      "minLength": 6,
      "description": "Clear question in natural language"
    },
    "answer": {
      "type": "string",
      "minLength": 6,
      "description": "Answer with numbered steps for Pro tier, â‰¤2 sentences for Free tier"
    },
    "category": {
      "type": "string",
      "enum": [
        "Approach & Entry",
        "Mooring",
        "Anchoring",
        "Weather & Shelter",
        "Safety & Hazards",
        "Facilities & Services",
        "Local Knowledge",
        "Media Tutorials",
        "General"
      ],
      "description": "Primary category from 9-category structure"
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": {
        "type": "string",
        "pattern": "^(scope|mooring|anchor|weather|swell|surge|hazard|facility|atmosphere|crowding|timing|media):[a-z0-9_<>\\-]+$",
        "description": "Domain-prefixed tag"
      },
      "uniqueItems": true
    },
    "tier": {
      "type": "string",
      "enum": ["free", "pro", "exclusive"]
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 500
    }
  }
}
