{
  "type": "object",
  "additionalProperties": false,
  "required": ["harbour", "question", "answer", "category", "tags", "tier"],
  "properties": {
    "harbour": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "question": {
      "type": "string",
      "minLength": 10
    },
    "answer": {
      "type": "string",
      "minLength": 20
    },
    "category": {
      "type": "string",
      "enum": [
        "Approach & Entry",
        "Mooring",
        "Anchoring",
        "Weather & Shelter",
        "Safety & Hazards",
        "Facilities & Services",
        "Local Knowledge",
        "Media Tutorials",
        "General"
      ]
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "maxItems": 12,
      "items": {
        "type": "string",
        "pattern": "^(scope|mooring|anchor|weather|swell|surge|hazard|facility|atmosphere|crowding|timing|media):[a-z0-9_<>\\-]+$"
      },
      "uniqueItems": true
    },
    "tier": {
      "type": "string",
      "enum": ["free", "pro", "exclusive"]
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 500
    }
  }
}
