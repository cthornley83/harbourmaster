{
  "type": "object",
  "additionalProperties": false,
  "required": ["harbour_name", "media_type", "title", "url"],
  "properties": {
    "harbour_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "media_type": {
      "type": "string",
      "enum": ["photo", "video", "aerial", "tutorial", "diagram"]
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "description": {
      "type": "string",
      "maxLength": 1000
    },
    "category": {
      "type": "string",
      "enum": [
        "Approach & Entry",
        "Mooring",
        "Anchoring",
        "Weather & Shelter",
        "Safety & Hazards",
        "Facilities & Services",
        "Local Knowledge",
        "General"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(scope|mooring|anchor|weather|hazard|facility|media):[a-z0-9_<>\\-]+$"
      },
      "uniqueItems": true
    },
    "tier": {
      "type": "string",
      "enum": ["free", "pro", "exclusive"]
    },
    "duration": {
      "type": "string",
      "pattern": "^\\d+:\\d{2}$"
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 500
    }
  }
}