{
  "type": "object",
  "additionalProperties": false,
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "region": {
      "type": ["string", "null"],
      "minLength": 2,
      "maxLength": 100
    },
    "coordinates": {
      "type": ["object", "null"],
      "required": ["lat", "lng"],
      "properties": {
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "lng": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      },
      "additionalProperties": false
    },
    "depth_range": {
      "type": ["string", "null"],
      "pattern": "^\\d+(\\.\\d+)?-\\d+(\\.\\d+)?m$"
    },
    "facilities": {
      "type": ["array", "null"],
      "items": {
        "type": "string",
        "enum": ["water", "fuel", "electricity", "wifi", "showers", "restaurant", "provisions", "chandlery", "laundry", "repair"]
      },
      "uniqueItems": true
    },
    "mooring_info": {
      "type": ["string", "null"],
      "maxLength": 1000
    },
    "approach_info": {
      "type": ["string", "null"],
      "maxLength": 1000
    },
    "shelter_info": {
      "type": ["string", "null"],
      "maxLength": 1000
    },
    "hazards": {
      "type": ["string", "null"],
      "maxLength": 1000
    },
    "holding": {
      "type": ["string", "null"],
      "maxLength": 500
    },
    "seabed": {
      "type": ["string", "null"],
      "maxLength": 500
    },
    "atmosphere": {
      "type": ["string", "null"],
      "maxLength": 500
    },
    "best_arrival": {
      "type": ["string", "null"],
      "maxLength": 500
    },
    "crowding_risk": {
      "type": ["string", "null"],
      "maxLength": 500
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 500
    }
  }
}