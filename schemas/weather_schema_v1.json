{
  "type": "object",
  "additionalProperties": false,
  "required": ["harbour_name", "wind_directions", "shelter_quality"],
  "properties": {
    "harbour_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "wind_directions": {
      "type": "object",
      "required": ["sheltered_from", "exposed_to"],
      "properties": {
        "sheltered_from": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["n", "ne", "e", "se", "s", "sw", "w", "nw"]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "exposed_to": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["n", "ne", "e", "se", "s", "sw", "w", "nw"]
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "shelter_quality": {
      "type": "string",
      "enum": ["excellent", "good", "moderate", "poor"]
    },
    "swell_surge": {
      "type": "object",
      "properties": {
        "susceptible": {
          "type": "boolean"
        },
        "conditions": {
          "type": "string",
          "maxLength": 500
        }
      },
      "additionalProperties": false
    },
    "best_conditions": {
      "type": "string",
      "maxLength": 500
    },
    "warnings": {
      "type": "string",
      "maxLength": 500
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 500
    }
  }
}