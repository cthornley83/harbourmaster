{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://harbourmaster.ai/schemas/weather_schema_v1.json",
  "title": "Harbour Weather Profile Schema",
  "description": "Schema for harbour weather and shelter profiles",
  "version": "1.0",
  "type": "object",
  "additionalProperties": false,
  "required": ["harbour_name", "wind_directions", "shelter_quality"],
  "properties": {
    "harbour_name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "Name of harbour this profile describes"
    },
    "wind_directions": {
      "type": "object",
      "description": "Wind direction analysis",
      "required": ["sheltered_from", "exposed_to"],
      "properties": {
        "sheltered_from": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["n", "ne", "e", "se", "s", "sw", "w", "nw"]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "exposed_to": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["n", "ne", "e", "se", "s", "sw", "w", "nw"]
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "shelter_quality": {
      "type": "string",
      "enum": ["excellent", "good", "moderate", "poor"],
      "description": "Overall shelter rating"
    },
    "swell_surge": {
      "type": "object",
      "properties": {
        "susceptible": {
          "type": "boolean",
          "description": "Is harbour susceptible to swell/surge?"
        },
        "conditions": {
          "type": "string",
          "maxLength": 500,
          "description": "When swell/surge occurs"
        }
      },
      "additionalProperties": false
    },
    "best_conditions": {
      "type": "string",
      "maxLength": 500,
      "description": "Ideal weather conditions for this harbour"
    },
    "warnings": {
      "type": "string",
      "maxLength": 500,
      "description": "Weather-related warnings"
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 500
    }
  }
}
